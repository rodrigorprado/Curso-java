package controle;

import java.util.Scanner;

public class DesafioDiaSemana {

	public static void main(String[] args) {
		//Digito o dia da semana e ele da o numero do dia
		//Domingo -> 1
		//Segunda -> 2
		//Terca -> 3
		//Quarta -> 4
		//Quinta -> 5
		//Sexta -> 6
		//Sabado -> 7
		
		Scanner entrada = new Scanner(System.in);
		
		System.out.print("Digite o dia da semana: ");
		String Dia = entrada.next();
		
		if(Dia = "Domingo" || Dia = "domingo") {
			System.out.println("Domingo é o dia 1");
		} else if(Dia = "Segunda" || Dia = "segunda") {
			System.out.println("Segunda é o dia 2");
		} else if(Dia = "Terca" || Dia = "terca") {
			System.out.println("Terca é o dia 3");
		} 
		
		entrada.close();
		
	}
}
